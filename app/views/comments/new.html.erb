<%= form_for @comment, url: {action: "create"} do |f| %>
  <p>
    <%= f.date %>
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>

  <p>
    <%= f.submit class:"btn btn-warning", method: :post%>
  </p>

<% end %>
